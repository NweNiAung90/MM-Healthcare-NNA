<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium_2">

    <org.mmtextview.components.MMTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Ted Talk Vol.23] How Much Storage is Really Needed in A Smartphone?"
        android:textSize="@dimen/margin_medium_3"
        android:textColor="@color/primary_text"
        android:layout_marginTop="@dimen/margin_medium_2"/>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/image"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pretty"
        android:textSize="@dimen/text_regular"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_below="@+id/ivImage"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jssharma"
        android:textSize="@dimen/text_regular"
        android:textColor="@android:color/secondary_text_light"
        android:layout_alignTop="@+id/tvType"
        android:layout_toRightOf="@id/tvType"
        android:layout_marginLeft="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5302"
        android:textSize="@dimen/text_regular"
        android:textColor="@android:color/secondary_text_light"
        android:layout_alignTop="@+id/tvType"
        android:layout_toRightOf="@id/tv_text"
        android:layout_marginLeft="@dimen/margin_medium_2"/>

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chat_bubble_outline_grey_24dp"
        android:layout_alignTop="@+id/tvType"
        android:layout_toRightOf="@id/tv_count"
        android:layout_marginLeft="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="229"
        android:textSize="@dimen/text_regular"
        android:textColor="@android:color/secondary_text_light"
        android:layout_alignTop="@+id/tvType"
        android:layout_toRightOf="@id/iv_comment"
        android:layout_marginLeft="@dimen/margin_small"/>

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_thumb_up_grey_24dp"
        android:layout_alignTop="@+id/tvType"
        android:layout_toRightOf="@id/tv_comment"
        android:layout_marginLeft="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="229"
        android:textSize="@dimen/text_regular"
        android:textColor="@android:color/secondary_text_light"
        android:layout_alignTop="@+id/tvType"
        android:layout_toRightOf="@id/iv_like"
        android:layout_marginLeft="@dimen/margin_small"/>

</RelativeLayout>